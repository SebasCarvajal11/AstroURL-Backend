<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="007-add-index-on-expiration-date" author="dev.astrourl">
        <comment>Adds an index to the expiration_date column for efficient cleanup queries.</comment>
        <createIndex indexName="idx_urls_expiration_date" tableName="urls">
            <column name="expiration_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>